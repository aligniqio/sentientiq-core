# Clerk Authentication (REQUIRED - You already have this)
CLERK_SECRET_KEY=sk_live_...
CLERK_WEBHOOK_SECRET=whsec_...
CLERK_PUBLISHABLE_KEY=pk_live_...

# Stripe (REQUIRED - You already have this)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Provider keys
OPENAI_API_KEY=sk-openai...
ANTHROPIC_API_KEY=sk-ant...
GROQ_API_KEY=gsk_...

# Model choices (override to taste)
OPENAI_MODEL=gpt-4.1
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620
GROQ_MODEL=llama3-8b-8192

# Concurrency pools (tune for box size)
OPENAI_CONCURRENCY=20
ANTHROPIC_CONCURRENCY=20
GROQ_CONCURRENCY=50

# Supabase (optional; retrieval falls back to empty if unset)
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# Server
PORT=8787

# Redis (for queue mode)
REDIS_URL=redis://127.0.0.1:6379
WORKER_NAME=w1

# Deployment Configuration
DEPLOYMENT_MODE=alpha  # Going live THIS WEEKEND
PREFER_ANTHROPIC=false  # Set to false to save costs initially

# Progressive Feature Flags (for alpha deployment)
ENABLE_CEO_ALERTS=true  # Start with this ON - it's the core value prop
ENABLE_DEAL_INTELLIGENCE=true  # Track those 4 users properly
ENABLE_EVI_CALCULATIONS=false  # Turn on after first week of data

# AWS Configuration for Event Lake (S3 + Athena) - Optional in alpha mode
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
EVENT_LAKE_BUCKET=sentientiq-event-lake
ATHENA_WORKGROUP=primary

# Twilio (for production notifications) - Optional in alpha mode
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack (for alpha notifications) - Required in alpha mode
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-path